@model Models.AgendamedicamentoModel

@{
    ViewData["Title"] = "Agendar Medicamento";
}

<h1>Criar Agendamento</h1>

<h4>Agendar Medicamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Frequencia" class="control-label"></label>
                <input asp-for="Frequencia" class="form-control" />
                <span asp-validation-for="Frequencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataTermino" class="control-label"></label>
                <input asp-for="DataTermino" class="form-control" />
                <span asp-validation-for="DataTermino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Intervalo" class="control-label"></label>
                <input asp-for="Intervalo" class="form-control" />
                <span asp-validation-for="Intervalo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPessoa" class="control-label"></label>
                <input asp-for="IdPessoa" class="form-control" />
                <!--<select asp-for="IdPessoa" asp-items="ViewBag.Pessoas" class="form-control"></select>-->
                <span asp-validation-for="IdPessoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAnimal" class="control-label"></label>
                <select asp-for="IdAnimal" asp-items="ViewBag.Animais" class="form-control"></select>
                <span asp-validation-for="IdAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMedicamento" class="control-label"></label>
                <select asp-for="IdMedicamento" asp-items="ViewBag.Medicamentos" class="form-control"></select>
                <span asp-validation-for="IdMedicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdConsulta" class="control-label"></label>
                <select asp-for="IdConsulta" asp-items="ViewBag.Consultas" class="form-control"></select>
                <span asp-validation-for="IdConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dosagem" class="control-label"></label>
                <input asp-for="Dosagem" class="form-control" />
                <span asp-validation-for="Dosagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
