@model GestaoAnimalWeb.Models.ConsultaModel

@{
    ViewData["Title"] = "Remover consulta";
}
<h1 class="section-title">Remover Consulta</h1>
<hr />

<h3>Tem certeza que deseja remover esta consulta?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdAnimal)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Animal
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPessoa)
        </dt>
        <dd class="col-sm-10">
            
            @ViewBag.Pessoa
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">voltar à lista</a>
    </form>
</div>
