@model Models.AplicaMedicamentoModel

@{
    ViewData["Title"] = "Remover Aplicação";
}

<h1 class="section-title">Excluir Aplicação</h1>
<hr />

<h3>Tem certeza que deseja remover esta aplicação?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Medicamento
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Medicamento
        </dd>
        <dt class="col-sm-2">
            Animal
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Animal
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dosagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dosagem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataAplicacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAplicacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPessoa)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Pessoa
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacoes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista</a>
    </form>
</div>
