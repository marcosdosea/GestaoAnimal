@model Models.AplicaMedicamentoModel

@{
    ViewData["Title"] = "Editar Aplicação";
}

<h1 class="section-title">Alterar Aplicação</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.IdAplicaMedicamento)
            @Html.HiddenFor(model => model.IdPessoa)
            <div class="form-group">
                <label asp-for="IdAnimal" class="control-label"></label>
                <select asp-for="IdAnimal" asp-items="ViewBag.Animais" class="form-control"></select>
                <span asp-validation-for="IdAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMedicamento" class="control-label"></label>
                <select asp-for="IdMedicamento" asp-items="ViewBag.Medicamentos" class="form-control"></select>
                <span asp-validation-for="IdMedicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPessoa" class="control-label"></label>
                <select asp-for="IdPessoa" asp-items="ViewBag.Pessoas" class="form-control"></select>
                <span asp-validation-for="IdPessoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dosagem" class="control-label"></label>
                <input asp-for="Dosagem" class="form-control" />
                <span asp-validation-for="Dosagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAplicacao" class="control-label"></label>
                <input asp-for="DataAplicacao" class="form-control" />
                <span asp-validation-for="DataAplicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
